<div class="cards" style="width: 33.333%;">
    <div>
        <img class="card-img-top" src="{{image_url}}" alt="Card image cap">
    </div>
    <div class="card-body">
        <h3 class="card-title">{{name}}</h3>
        <h5 class="tagLine">{{tagline}}</h5>
        <p class="card-text">{{description}}</p>
        <h4>Food Pairing</h4>
        <ul>
            {{#each food_pairing}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
        <p><strong>Brewers Tips:</strong> {{brewers_tips}}</p>
    </div>
</div>